{% extends 'base.html.twig' %}

{% block title %}View {{assignee.firstName}} {{assignee.lastName}}{% endblock%}

{% block body %}
    <a href="/assignees" class="btn btn-default">Back to Assignees</a>
    <a href="/todo/addtask/{{ assignee.id }}" class="btn btn-success">Add Task</a>
    <h2 class="page-header">{{assignee.firstName}} {{assignee.lastName}}</h2>
    <ul class="list-group">
        <li class="list-group-item">Email: {{assignee.email}}</li>
    </ul>
    <h3 class="page-header">Tasks</h3>
    <table class="table table-striped"> 
        <thead> 
            <tr> 
                <th>#</th> 
                <th>Todo</th> 
                <th>Due Date</th>
                <th>Category</th>
                <th></th> 
            </tr> 
        </thead> 
        <tbody> 
            {% for todo in assignee.todos %}
            <tr> 
                <th scope="row">{{loop.index}}</th>
                <td>{{todo.name}}</td> 
                <td>{{todo.dueDate|date('F j, Y, g:i a')}}</td> 
                <td>{{todo.category.name}}</td>
                <td>
                    <a href="/todo/details/{{todo.id}}" class="btn btn-success">View</a>
                    <a href="/todo/edit/{{todo.id}}" class="btn btn-default">Edit</a>
                    <a href="/todo/delete/{{todo.id}}" class="btn btn-danger">Delete</a>
                </td> 
            </tr>
            {% endfor %}
        </tbody> 
    </table>
    
{% endblock %}