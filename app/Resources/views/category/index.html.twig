{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">List Categories</h2>
    <table class="table table-striped"> 
        <thead> 
            <tr> 
                <th>#</th> 
                <th>Category Name</th> 
                <th></th> 
            </tr> 
        </thead> 
        <tbody> 
            {% for category in categories %}
            <tr> 
                <th scope="row">{{category.id}}</th>
                <td>{{category.name}}</td> 
                <td>
                    <a href="/category/details/{{category.id}}" class="btn btn-success">View</a>
                    <a href="/category/edit/{{category.id}}" class="btn btn-default">Edit</a>
                    <a href="/category/delete/{{category.id}}" class="btn btn-danger">Delete</a>
                </td> 
            </tr>
            {% endfor %}
        </tbody> 
    </table>

{% endblock %}